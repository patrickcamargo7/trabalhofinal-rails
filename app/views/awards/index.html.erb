<% content_for :title do %>
  Awards
<% end %>

<div class="page-header">
  <h1>Awards</h1>
  <%= link_to new_award_path, class: 'btn btn-primary' do %>
    <%= icon 'fas', 'plus' %>
    Novo Award
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Raffle</th>
        <th>Description</th>
        <th>Position</th>
        <th>Ticket</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @awards.each do |award| %>
        <tr>
          <td><%= award.raffle %></td>
          <td><%= award.description %></td>
          <td><%= award.position %></td>
          <td><%= award.ticket %></td>
          <td>
            <%= link_to award, class: 'btn btn-info btn-sm' do %>
              <%= icon 'fas', 'eye', class: 'fa-fw' %>
            <% end %>
            <%= link_to edit_award_path(award), class: 'btn btn-success btn-sm' do %>
              <%= icon 'fas', 'edit', class: 'fa-fw' %>
            <% end %>
            <%= link_to award, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class: 'btn btn-danger btn-sm' do %>
              <%= icon 'fas', 'times', class: 'fa-fw' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>