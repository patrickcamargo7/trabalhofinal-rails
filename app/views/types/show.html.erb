<% content_for :title do %>
  Detalhes de Type
<% end %>

<div class="page-header">
  <h1>Detalhes de Type</h1>
  <div>
    <%= link_to edit_type_path(@type), class: 'btn btn-success' do %>
      <%= icon 'fas', 'edit' %>
      Editar
    <% end %>
    <%= link_to types_path, class: 'btn btn-outline-secondary' do %>
      <%= icon 'fas', 'bars' %>
      Voltar
    <% end %>
  </div>
</div>

<dl class="dl-horizontal">
  <dt>Description:</dt>
  <dd><%= @type.description %></dd>

  <dt>Initial number:</dt>
  <dd><%= @type.initial_number %></dd>

  <dt>Amount:</dt>
  <dd><%= @type.amount %></dd>

  <dt>Step:</dt>
  <dd><%= @type.step %></dd>

</dl>
