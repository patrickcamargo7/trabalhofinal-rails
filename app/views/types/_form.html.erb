
<%= simple_form_for @type do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.input :initial_number %>
    <%= f.input :amount %>
    <%= f.input :step %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, f.object.new_record? ? 'Criar Type' : 'Atualizar Type', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
