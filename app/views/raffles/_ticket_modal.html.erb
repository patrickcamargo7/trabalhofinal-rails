<div class="modal fade" id="ticketModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="ticketModalLabel">Ticket Modal</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-group">
            <label>Ticket Number: </label> <span id="ticketNumber"></span>
        </div>
        <div class="form-group">
            <label>Price: </label> <span id="ticketPrice"></span>
        </div>
        <div class="form-group">
            <label>Date: </label> <span id="ticketDate"></span>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="btnPurchase" data-ticket-id="">Purchase</button>
      </div>
    </div>
  </div>
</div>