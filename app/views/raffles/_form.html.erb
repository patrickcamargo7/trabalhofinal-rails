
<%= simple_form_for @raffle do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :type %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :raffle_date %>
    <%= f.input :init_date %>
    <%= f.input :final_date %>
    <%= f.input :value %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, f.object.new_record? ? 'Criar Raffle' : 'Atualizar Raffle', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
